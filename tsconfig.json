{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "paths": {
      "@images/*": [ "images/*" ],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "index.d.ts"
  ]
}
